{
  "manifest_version": 3,
  "name": "Swagger Environment Variables",
  "version": "1.0.0",
  "description": "Manage and auto-replace environment variables in web forms, with special support for Swagger UI",
  "author": "Your Name",

  "permissions": ["storage", "activeTab", "contextMenus", "scripting"],

  "host_permissions": ["<all_urls>"],

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+E",
        "mac": "Alt+Shift+E"
      }
    },
    "replace-variables": {
      "suggested_key": {
        "default": "Alt+Shift+R",
        "mac": "Alt+Shift+R"
      },
      "description": "Substituir variáveis na página atual"
    },
    "toggle-extension": {
      "suggested_key": {
        "default": "Alt+Shift+T",
        "mac": "Alt+Shift+T"
      },
      "description": "Ativar/desativar extensão"
    }
  },

  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content-script.ts"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],

  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "options_page": "src/options/options.html",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "default_locale": "en",

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
