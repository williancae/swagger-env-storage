{
  "name": "swagger-environment-variables",
  "version": "1.0.0",
  "description": "Browser extension for managing and auto-replacing environment variables in web forms",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,html,css}\"",
    "type-check": "tsc --noEmit",
    "web-ext:run": "web-ext run --source-dir dist"
  },
  "dependencies": {
    "@webcomponents/webcomponentsjs": "^2.8.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/chrome": "^0.1.36",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.4.0",
    "terser": "^5.46.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-web-extension": "^4.0.0",
    "vitest": "^1.2.0",
    "web-ext": "^7.10.0"
  }
}
